<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    android:layout_height="match_parent"
    tools:context=".Emojis">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="casual"
        android:textColor="@color/azull"
        android:textSize="40dp"
        android:text="Estado de animo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imagetristeza"
            android:layout_width="115dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/tristeza" />

        <ImageView
            android:id="@+id/imagefuria"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/furia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txttristeza"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="monospace"

            android:text="Tristeza" />

        <TextView
            android:id="@+id/txtfuria"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Furia" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imagedesagrado"
            android:layout_width="115dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/desa"
            />

        <ImageView
            android:id="@+id/imagefeliz"
            android:layout_width="115dp"
            android:layout_height="100dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/feliz" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtdesagrado"
            android:layout_width="127dp"
            android:layout_height="34dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="monospace"
            android:text="Tristeza" />

        <TextView
            android:id="@+id/txtfeliz"
            android:layout_width="208dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="Feliz" />

    </LinearLayout>
</LinearLayout>